<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AboutFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/android_trivia" />


        <TextView
            android:id="@+id/title_txv_fragmentAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/title_quiz" />

        <TextView
            android:id="@+id/body_txv_fragmentAbout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_text_body"
            android:textSize="18sp"
            android:text="@string/about_body" />
    </LinearLayout>
</layout>